<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


    <item>

        <shape android:shape="rectangle" >
            <gradient
                android:angle="45"
                android:centerColor="@color/begie"
                android:endColor="@color/lightpurple_100"
                android:startColor="@color/lightpurple_200" />
            <corners android:radius="50dp" />
        </shape>


    </item>



    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">

        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />
            <corners android:radius="50dp" />
        </shape>

    </item>



</layer-list>
