<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NonMember">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center"
        android:fontFamily="@font/nanumbarungothic"
        android:layout_gravity="center">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textColor="@color/darkpurple"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/nonmember_et1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:backgroundTint="@color/lightpink"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="전화번호"
            android:textColor="@color/darkpurple"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/nonmember_et2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="13"
            android:backgroundTint="@color/lightpink"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="비밀번호"
            android:textColor="@color/darkpurple"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/nonmember_et3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:backgroundTint="@color/lightpink"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="비밀번호 확인"
            android:textColor="@color/darkpurple"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/nonmember_et4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:backgroundTint="@color/lightpink"/>
    </LinearLayout>
        <Button
            android:id="@+id/non_member_bt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:background="@drawable/gradient_basic_button"
            android:textAllCaps="false"
            android:text="가입하기"
            android:fontFamily="@font/nanumbarungothicbold"
            android:textColor="@color/darkpurple"
            android:textSize="20dp"/>
</LinearLayout>