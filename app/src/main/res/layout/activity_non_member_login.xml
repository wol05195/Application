<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NonMemberLogin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="5">
        <EditText
            android:id="@+id/non_member_login_et1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/corner_line_button"
            android:textColor="#ACACAC"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:hint="NAME"/>

        <EditText
            android:id="@+id/non_member_login_et2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner_line_button"
            android:textColor="#ACACAC"
            android:textSize="15dp"
            android:paddingLeft="15dp"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:hint="PW"/>


        <Button
            android:id="@+id/non_member_login_bt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/gradient_basic_button"
            android:text="LogIn"
            android:textColor="@color/darkpurple"
            android:textStyle="bold"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textColor="#BEBBBB"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/non_member_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textColor="@color/pink_200"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>