<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Member">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:fontFamily="@font/nanumbarungothic"
            android:scrollbarThumbVertical="@color/brown"
            android:fadeScrollbars="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="이름"
                    android:textColor="@color/darkpurple"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/member_et1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:maxLength="3"
                    android:backgroundTint="@color/lightpink"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="아이디"
                    android:textColor="@color/darkpurple"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/member_et2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="7"
                    android:backgroundTint="@color/lightpink" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="비밀번호"
                    android:textColor="@color/darkpurple"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/member_et3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:maxLength="8"
                    android:backgroundTint="@color/lightpink"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="비밀번호 확인"
                    android:textColor="@color/darkpurple"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/member_et4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:maxLength="8"
                    android:backgroundTint="@color/lightpink"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="이메일"
                    android:textColor="@color/darkpurple"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/member_et5"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:maxLength="30"
                    android:backgroundTint="@color/lightpink"/>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="전화번호"
                    android:textColor="@color/darkpurple"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/member_et6"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:backgroundTint="@color/lightpink"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/member_button1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/gradient_basic_button"
        android:textAllCaps="false"
        android:text="가입하기"
        android:fontFamily="@font/nanumbarungothicbold"
        android:textColor="@color/darkpurple"
        android:layout_gravity="center"
        android:textSize="20dp"/>
</LinearLayout>